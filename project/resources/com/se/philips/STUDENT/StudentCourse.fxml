<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #0b1d2b;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.se.philips.AdminDashboard.CourseDashboardController">

    <center>
        <VBox alignment="CENTER" spacing="10">

            <HBox spacing="10">
                <TextField fx:id="titleField" focusTraversable="false" promptText="Title" />
                <ComboBox fx:id="difficultyBox" promptText="Difficulty" style="-fx-background-color: #dbe9f4;" stylesheets="@../css/diff.css" />
            <VBox.margin>
               <Insets left="20.0" top="20.0" />
            </VBox.margin>
            </HBox>

            <TextArea fx:id="descField" prefRowCount="3" promptText="Description">
            <VBox.margin>
               <Insets left="20.0" right="20.0" top="20.0" />
            </VBox.margin></TextArea>

            <HBox spacing="10">
                <TextField fx:id="categoryField" promptText="Category">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </HBox.margin></TextField>
                <TextField fx:id="tagsField" promptText="Tags">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </HBox.margin></TextField>
            </HBox>

            <HBox spacing="10">
                <TextField fx:id="thumbnailField" promptText="Thumbnail Path" />
                <Button onAction="#browseThumbnail" text="Browse" />
            </HBox>

            <HBox spacing="10">
                <TextField fx:id="attachmentField" promptText="Attachment File" />
                <Button onAction="#browseAttachment" text="Browse" />
            </HBox>

            <Label text="Assign to Teacher(s):" />
            <ListView fx:id="teacherListView" maxHeight="120" prefHeight="100" />

            <Button onAction="#handleSaveCourse" style="-fx-background-color: #2ecc71;" text="Save Course" />

            <TableView fx:id="courseTable" prefHeight="250" style="-fx-border-color: transparent;" stylesheets="@../css/tableview.css">
                <columns>
                    <TableColumn fx:id="titleCol" text="Title" />
                    <TableColumn fx:id="categoryCol" text="Category" />
                    <TableColumn fx:id="difficultyCol" text="Difficulty" />
                    <TableColumn fx:id="actionCol" text="Action" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
