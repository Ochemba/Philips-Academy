<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.se.philips.AdminDashboard.Payment.AdBox.DialogBoxController"
      style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-radius: 8;">

    <Label text="Pay Admin Bill" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="titleField" promptText="Enter bill title" maxWidth="300" />
    <TextField fx:id="amountField" promptText="Enter amount (e.g. 2500.00)" maxWidth="300" />

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleCancel" text="Cancel" />
        <Button onAction="#handlePay" text="Pay" defaultButton="true" />
    </HBox>

</VBox>
