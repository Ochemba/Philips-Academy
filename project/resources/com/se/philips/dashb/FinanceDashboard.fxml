<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #dbe9f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.se.philips.AdminDashboard.FinanceDashboardController">

    <top>
        <HBox spacing="10">
         <FontAwesomeIconView fill="#535050" glyphName="SEARCH" translateX="8.0" translateY="7.0" />
            <TextField fx:id="searchField" focusTraversable="false" promptText="Search by invoice, name, or matric ID" style="-fx-background-color: #dcdcdc;" HBox.hgrow="ALWAYS" />
            <Button onAction="#handleSearch" style="-fx-background-color: #3B82F6;" text="Search" />
            <Button onAction="#openPayBillDialog" style="-fx-background-color: #10B981;" text="Pay Bill" />
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <VBox spacing="20">

            <Label text="Student Payments">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></Label>
            <TableView fx:id="studentPaymentTable" prefHeight="250" stylesheets="@../css/tableview.css">
                <columns>
                    <TableColumn fx:id="matricCol" text="Matric ID" />
                    <TableColumn fx:id="nameCol" text="Name" />
                    <TableColumn fx:id="invoiceCol" text="Invoice No" />
                    <TableColumn fx:id="amountCol" text="Amount Paid" />
                    <TableColumn fx:id="statusCol" text="Payment Status" />
                    <TableColumn fx:id="dateCol" text="Payment Date" />
               <TableColumn fx:id="studentActionsCol" text="Actions" />
                </columns>
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>

            <Label text="Admin Payments">
            <VBox.margin>
               <Insets right="10.0" top="10.0" />
            </VBox.margin>
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding></Label>
            <TableView fx:id="adminPaymentTable" prefHeight="250" stylesheets="@../css/tableview.css">
                <columns>
                    <TableColumn fx:id="titleNameCol" text="Title" />
                    <TableColumn fx:id="adminInvoiceCol" text="Invoice No" />
                    <TableColumn fx:id="adminAmountCol" text="Amount Paid" />
                    <TableColumn fx:id="adminPurposeCol" text="Purpose" />
                    <TableColumn fx:id="adminDateCol" text="Payment Date" />
                    <TableColumn fx:id="adminActionsCol" text="Actions" />
                </columns>
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>

        </VBox>
    </center>

</BorderPane>
