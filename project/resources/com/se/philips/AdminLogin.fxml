      <VBox maxWidth="213" minWidth="209.0" prefHeight="600.0" prefWidth="209.0" style="-fx-background-color: #4e89b8;">

         <!-- Top spacer -->
         <Region VBox.vgrow="ALWAYS" />

         <!-- Logo (centered horizontally) -->
         <ImageView fitHeight="150" fitWidth="200" preserveRatio="true" translateX="19.0">
            <VBox.margin>
               <Insets left="6.5" />
            </VBox.margin>
            <image>
               <Image url="@../../../image/Logo.png" />
            </image>
         </ImageView>

         <!-- Middle spacer -->
         <Region VBox.vgrow="ALWAYS" />

         <!-- Copyright (fixed at bottom) -->
         <Label text="CopyRight (c). All Rights Reserved" textFill="WHITE">
            <VBox.margin>
               <Insets bottom="10" left="20" />
            </VBox.margin>
         </Label>
      </VBox>
   </left>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <!-- Back button (top-right) -->
         <Label fx:id="BackLabel" onMouseClicked="#Back" style="-fx-text-fill: #4e89b8; -fx-font-weight: bold; -fx-cursor: hand;" text="Back" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20" />

