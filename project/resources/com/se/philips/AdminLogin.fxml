<BorderPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.se.philips.Admin.AdminLoginController">

   <!-- Left Sidebar (fixed width, responsive height) -->
