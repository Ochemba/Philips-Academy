<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.se.philips.Admin1.AdminController">
    <top>
        <HBox style="-fx-background-color: #336699; -fx-padding: 15;">
            <Text fill="WHITE" text="Admin Dashboard" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <TableView fx:id="usersTable">
                <columns>
                    <TableColumn text="ID" prefWidth="50">
                        <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Name" prefWidth="150">
                        <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Email" prefWidth="200">
                        <cellValueFactory><PropertyValueFactory property="email"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Role" prefWidth="100">
                        <cellValueFactory><PropertyValueFactory property="role"/></cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Button text="Refresh" onAction="#handleRefresh"/>
                <Button text="Delete" onAction="#handleDelete" style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
            </HBox>

            <GridPane hgap="10" vgap="10">
                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <Button text="Add" onAction="#handleAdd" style="-fx-background-color: #00C851; -fx-text-fill: white;"/>
                    <Button text="Update" onAction="#handleUpdate" style="-fx-background-color: #ffbb33; -fx-text-fill: white;"/>
                    <Button text="Clear" onAction="#handleClear"/>
                </HBox>
            </GridPane>
        </VBox>
    </center>
</BorderPane>