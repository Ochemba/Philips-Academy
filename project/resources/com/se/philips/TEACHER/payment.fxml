<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.se.philips.StudentPaymentController">
    <VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">
        <Label text="Student Payment" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="matricIdField" promptText="Enter Matric ID" />
        <TextField fx:id="amountField" promptText="Enter Amount" />
        <Button text="Pay Now" onAction="#handlePayNow" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </VBox>
</AnchorPane>
