<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane fx:id="dialogRoot" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.se.philips.AdminDashboard.LogOutDialogController"
           style="-fx-background-color: rgba(0, 0, 0, 0.4); -fx-alignment: CENTER;">

    <VBox spacing="20" alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, gray, 8, 0.3, 0, 0);">

        <Label text="Are you sure you want to log out?"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <HBox spacing="20" alignment="CENTER">
            <Button text="Cancel" onAction="#handleCancel"
                    style="-fx-background-color: lightgray; -fx-text-fill: black; -fx-background-radius: 5; -fx-font-size: 13px;" />
            <Button text="Log Out" onAction="#handleConfirm"
                    style="-fx-background-color: #5F9EA0; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 13px;" />
        </HBox>
    </VBox>
</StackPane>
